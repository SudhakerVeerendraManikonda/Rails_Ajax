<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Work details</th>
      <th>Worker</th>
      <th>Status</th>
      <th>Date of creation</th>
      <th>Last updated at</th> 	  
    </tr>
  </thead>

  <tbody>
    <% @workorders.each do |workorder| %>
      <tr>
        <td><%= workorder.work_details %></td>
        <td><%= workorder.worker.first_name + " " + workorder.worker.last_name %></td>
        <td><%= workorder.status.status_description %></td>
        <td><%= workorder.date_of_creation.to_date  %></td>
        <td><%= workorder.last_updated_at.to_date  %></td> 	
      </tr>
    <% end %>
  </tbody>
</table>
